.list-group
  = link_to workspaces_path, class: 'list-group-item' do
    %i.fa.fa-fw.fa-arrow-left
    %span.hide-collapsed Close

  = link_to edit_workspace_path(@workspace), class: 'list-group-item' do
    %i.fa.fa-fw.fa-gear.loading
    %span.hide-collapsed Settings

%h5.text-left
  .hide-collapsed Layers
.list-group
  = link_to '#style-list', class: 'list-group-item', data: { toggle: 'collapse' } do
    %i.fa.fa-fw.fa-globe
    %span.hide-collapsed Base Layer
    .pull-right.hide-collapsed
      %i.fa.fa-caret-left.rotatable
  #style-list.list-group.sub.collapse
    = link_to '#', class: 'list-group-item map-style active layer', data: { behavior: 'switch-base', name: 'satellite-streets' } do
      .layer-handle
        &nbsp;
      .layer-controls
        .layer-label Mapbox Satellite
    = link_to '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'streets' } do
      .layer-handle
        &nbsp;
      .layer-controls
        .layer-label Mapbox Streets
    = link_to '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'outdoors' } do
      .layer-handle
        &nbsp;
      .layer-controls
        .layer-label Mapbox Outdoors
    = link_to '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'light' } do
      .layer-handle
        &nbsp;
      .layer-controls
        .layer-label Mapbox Light
    = link_to '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'dark' } do
      .layer-handle
        &nbsp;
      .layer-controls
        .layer-label Mapbox Dark


  = link_to '#overlay-layer-list', class: 'list-group-item', data: { toggle: 'collapse' } do
    %i.fa.fa-fw.fa-map-o
    %span.hide-collapsed Overlays
    .pull-right.hide-collapsed
      %i.fa.fa-caret-left.rotatable
  #overlay-layer-list.list-group.sub.collapse.overlay-list
    = render 'overlays'
