#workspace-map.map-container
  .map-sidebar{ data: { behavior: 'hover-toggle', target: '#workspace-map', class: 'expand' } }
    %h4.text-center
      .hide-collapsed Workspace
      .show-collapsed WS

    .list-group
      = link_to workspaces_path, class: 'list-group-item' do
        %i.fa.fa-fw.fa-arrow-left
        %span.hide-collapsed Close

      = link_to edit_workspace_path(@workspace), class: 'list-group-item' do
        %i.fa.fa-fw.fa-gear.loading
        %span.hide-collapsed Settings

    %h5.text-left
      .hide-collapsed Layers
      .show-collapsed &nbsp;
    .list-group
      = link_to '#style-list', class: 'list-group-item', data: { toggle: 'collapse' } do
        %i.fa.fa-fw.fa-globe
        %span.hide-collapsed Base Layer
        .pull-right.hide-collapsed
          %i.fa.fa-caret-left.rotatable
      #style-list.list-group.sub.collapse
        = link_to 'Mapbox Satellite', '#', class: 'list-group-item map-style active', data: { behavior: 'switch-base', name: 'satellite' }
        = link_to 'Mapbox Streets', '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'streets' }
        = link_to 'Mapbox Light', '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'light' }
        = link_to 'Mapbox Dark', '#', class: 'list-group-item map-style', data: { behavior: 'switch-base', name: 'dark' }


      = link_to '#overlay-layer-list', class: 'list-group-item', data: { toggle: 'collapse' } do
        %i.fa.fa-fw.fa-map-o
        %span.hide-collapsed Overlays
        .pull-right.hide-collapsed
          %i.fa.fa-caret-left.rotatable
      #overlay-layer-list.list-group.sub.collapse
        = link_to 'GINA Orthomosaic', '#', class: 'list-group-item layer active', data: { name: 'GINA Orthomosaic', behavior: 'add-layer', url: 'http://tiles.gina.alaska.edu/tiles/SPOT5.SDMI.ORTHO_RGB/tile/{x}/{y}/{z}', type: 'tile'  }
        = link_to 'IMIQ Sites', '#', class: 'list-group-item layer', data: { name: 'IMIQ Sites', behavior: 'add-layer', url: 'http://imiq-api.gina.alaska.edu/sites.geojson?limit=5000', type: 'geojson'  }
  .map-content
    %nav.navbar.navbar-inverse.navbar-static-top{ style: 'margin-bottom: 0px;'}
      %i.fa.fa-spinner.loading.navbar-text.pull-right{ style: 'font-size: 20px;'}
    #map.map{ data: { center: [@workspace.center_lng.to_f, @workspace.center_lat.to_f], zoom: @workspace.zoom } }
